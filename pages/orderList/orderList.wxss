/**item**/

.circle {
  background: linear-gradient(to left, #df3c01, #ff9a76);
  color: white;
  border-radius: 30rpx;
  padding: 5rpx 20rpx;
   box-shadow: 0 5rpx 10rpx #ff9a76; 
  font-size: 30rpx;
  height: 60rpx;
   width: 120rpx;
}

.circle-unfinished {
  background: #ededed;
  color: #79797a;
  border-radius: 30rpx;
  padding: 5rpx 20rpx;
  font-size: 30rpx;
