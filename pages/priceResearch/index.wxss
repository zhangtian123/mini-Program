@import "../template/template.wxss";
@import "../../tools/content.wxss";

.port {
  width: 50%;
  height: 80%;
  margin: auto;
  position: absolute;
  top: 0;
  left: 0;
  bottom: 0;
  right: 60rpx;
  color: #006fbe;
  overflow: auto;
  text-align: center;
}

.port-btn {
  border: none;
  color: #006fbe;
  background-color: white;
  font-size: 36rpx;
  border-color: white;
}

.filter {
  margin-left: 80%;
}

.key-info {
  color: #0078cd;
  font-size: 36rpx;
  margin-right: 20rpx;
}

.col-list {
  display: flex;
  flex-direction: column;
  font-size: 28rpx;
}

.row-list {
  display: flex;
  flex-direction: row;
}

.top {
  width: 100%;
  height: 7%;
  background-color: white;
  position: fixed;
  z-index: 3;
}

.oo-image {
  position:absolute;
  width: 150rpx;
  height: 150rpx;
  opacity: 0.5;
  z-index: 0;
  margin-left: 70%;
  margin-top: 20rpx;
}

.search {
  margin-top: 80rpx;
  position: fixed;
  z-index: 3;
  height: 60%;
  background-color: white;
  padding: 20rpx 30rpx;
}

.triangle {
  height: 0;
  width: 0;
  overflow: hidden;
  font-size: 0;
  border-color: transparent transparent white transparent;
  border-style: dashed dashed solid dashed;
  border-width: 20rpx;
  position: absolute;
  top: -30rpx;
  right: 30rpx;
}

.cover {
  width: 100%;
  z-index: 2;
  height: 100%;
  background-color: black;
  opacity: 0.5;
  position: fixed;
}

.search-input-col {
  margin-top: 1%;
  display: flex;
  flex-direction: column;
}

.search-input-row {
  margin-top: 1%;
  display: flex;
  flex-direction: row;
  width:100%;
}

.search-input {
  margin-top: 1%;
  height: 70rpx;
  border: 3rpx solid #dddadd;
  border-radius: 30rpx;
}

.section {
  margin-left: 20rpx;
  line-height: 70rpx;
  color: #006fbe;
}

.section image {
  width: 48rpx;
  height: 48rpx;
  margin-top: 10rpx;
}

.myBtn {
  width: 70%;
  color: white;
  height: 80rpx;
  line-height: 80rpx;
  margin-top: 20rpx;
  border: 1rpx solid #dddadd;
  background: linear-gradient(to right, #36a2ef, #0078cd);
  box-shadow: 0rpx 2rpx 6rpx #36a2ef;
  border-radius: 30rpx;
}

.share {
  width: 40%;
  height: 40%;
  margin-left: 20rpx;
  font-size: 30rpx;
  color: white;
  border: 1rpx solid #dddadd;
  background: linear-gradient(to right, #36a2ef, #0078cd);
  box-shadow: 0rpx 2rpx 6rpx #36a2ef;
  border-radius: 40rpx;
}
.pin2 {
  width: 50rpx;
  height: 50rpx;
  margin: 0 0 0 30rpx;
}
.sum {
  color: #df3c01;
  font-size: 36rpx;
  width: 120rpx;
  text-align: right;
}

.line {
  width: 98%;
  border-bottom: 1rpx dashed #dddadd;
}
