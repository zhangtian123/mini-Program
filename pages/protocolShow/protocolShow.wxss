/* pages/protocolShow/protocolShow.wxss */
.show-btn {
  margin-top: 100rpx;
  color: #2c2;
}

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.6;
  overflow: hidden;
  z-index: 9000;
}

.modal-dialog {
  width: 80%;
  height:90%;
  overflow: hidden;
  position: fixed;
  margin: auto;
  z-index: 9999;
  background: white;
  left:0;  
  right:0; 
  top:0;
  bottom:0;
}

.modal-title {
  padding-top: 50rpx;
  font-size: 36rpx;
  color: #030303;
  text-align: center;
}

.modal-content {
  padding: 50rpx 32rpx;
  height: 70%;
}

scroll-view {
  width: 100%;
  white-space: pre-line;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 15%;
  border-top: 1rpx solid #dedede;
  font-size: 40rpx;
  line-height: 100rpx;
}

.btn-cancel {
  width: 50%;
  color: black;
  text-align: center;
  border-right: 1rpx solid #dedede;
}

.btn-confirm {
  width: 50%;
  color: #3cc51f;
  text-align: center;
}