/*顶部导航样式*/
  .navbar{ 
 flex: none; 
 display: flex;  
 padding-top: 15rpx;
 z-index: 50; 
 height: 70rpx;
 background-color:  #fff;
 border-bottom:3rpx solid #dddadd;
}

.navbar .item{ 
 position: relative; 
 flex: auto; 
 text-align: center;
 line-height: 60rpx; 
 font-size: 36rpx;
 color: #79797a;
} 

.navbar .item.active{ 
 color: #0071c1; 
 font-size: 36rpx;
} 

.navbar .item.active:after{ 
 content: ""; 
 display: block; 
 position: absolute; 
 bottom: 0rpx; 
 left: 20rpx; 
 right: 20rpx; 
 height: 6rpx; 
 background: #0071c1; 
 font-size: 36rpx;
 color: #79797a;
}

#one{
  padding: 30rpx 30rpx 0 30rpx;
  line-height: 80rpx;
}

.state,.info{
  border-radius: 40rpx;
  background-color: white;
  box-shadow: 0 5rpx 10rpx #dddadd;
  color: #006fbe;
  padding: 0 30rpx;
}

.info{margin-top: 30rpx;
}

.info view{
  color:#79797a;
}

picker{
  margin-left: 66rpx;
}

.driver{
  width:20%;
  margin:10rpx 0 0 66rpx;
  border-bottom: 2rpx solid #dddadd
}

.weight{
  margin:10rpx 0 0 26rpx;
  border-bottom: 2rpx solid #dddadd
}

.volume{
  margin:10rpx 0 0 10rpx;
  border-bottom: 2rpx solid #dddadd
}

textarea{
  border: 2rpx solid #dddadd;
  margin-bottom: 40rpx;
  border-radius: 30rpx;
