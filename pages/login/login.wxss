/* pages/login/login.wxss */
/**************public part*****************/
page {
  background-color: white;
}

.content {
  padding: 15% 80rpx 0 80rpx;
}

.myBtn {
  width: 100%;
  color: white;
  border: 1px solid #dddadd;
  background: linear-gradient(to right, #36a2ef, #0078cd);
  box-shadow: 0px 2px 6px #36a2ef;
  border-radius: 30px;
  margin-top: 40rpx;
  height: 90rpx;
  line-height: 90rpx;
}

.icon {
  width: 60rpx;
  height: 60rpx;
  float: left;
  margin: 10rpx 10rpx 0 20rpx;
}

.input-bg {
  width: 100%;
  border-radius: 30px;
  height: 80rpx;
  border: 1px solid #dddadd;
  margin-top: 30rpx;
}

.textfield {
  text-align: left;
  margin-top: 17rpx;
  margin-left: 10rpx;
}

/*******************private part****************/
/*registerbutton  */

.register {
  color: #0078cd;
  font-size: 30rpx;
  margin-top: 30rpx;
}

/*forgot password button */

.rightside {
  color: #0078cd;
  font-size: 30rpx;
  margin-top: 30rpx;
  text-align: right;
}

.register, .rightside {
  float: left;
  width: 50%;
}

/*logo space*/

.logo-box {
  width: 100%;
  margin-bottom: 150rpx;
  text-align: center;
}

.logoimage {
  border: 1px solid #dddadd;
  width: 180rpx;
  height: 180rpx;
  border-radius: 200rpx;
  box-shadow: 0 0 20rpx #d4d4d4;
}