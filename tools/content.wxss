page{
  background-color: #dedede;
}

.menu,.typeListClass,.port,.filter{
 float: left;
}

.menu{
  width:50rpx;
  height:50rpx;
}

.typeListClass{
  text-align: center;
  margin:0 25%;
  width: 30%;
}

.icon{
    display: inline-block;
    border: 10rpx solid transparent;
    border-top: 10rpx solid #0078cd;
    margin-left: 5rpx;
    margin-top: 25rpx;
    position: absolute;
}

.card{
  background-color: #fff;
  padding:20rpx 30rpx;
  margin-bottom: 15rpx;
  border-radius: 15rpx;
  margin: 0 20rpx 20rpx 20rpx;
  box-shadow: 0 5rpx 5rpx #dddadd;
}

.card1{
  background-color: #fff;
  margin: 0 20rpx 15rpx 20rpx;
  border: solid 1px #dddadd;
  box-shadow: 0 5rpx 10rpx #dddadd;
}
.card2{
  background-color: #fff;
  margin: 0 20rpx 15rpx 20rpx;
  border: solid 1px #dddadd;
  box-shadow: 0 5rpx 10rpx #dddadd;
  padding:20rpx 30rpx;
}

.typeList{
  height:15rpx;
}

.type-show{
  background-color: white;
  border-bottom: 1px groove solid;
}

.type-hover{
  background-color: #dddadd;
  border: 1rpx solid white;
}

.itemBox{
  width: 100%;
  height: 100%;
  border-radius:30rpx;
  box-shadow: 0 5rpx 10rpx #dddadd;
}

.sticker{
  width:50rpx;
  height:50rpx;
  margin: 3rpx 3rpx 0rpx 5rpx;
}

.dashLine{
  width: 100%;
  height:0;
  border-bottom: #dddadd 1rpx dashed;
}

.myBtn{
width: 40%;
color:white;
border: 1rpx solid #dddadd;
background: linear-gradient(to right,#36a2ef,#0078cd);
box-shadow: 0rpx 2rpx 6rpx #36a2ef;
border-radius: 40rpx;
}

#pass{
margin: 0 20rpx 0 40rpx;
}

#refuse{
margin: 0 40rpx 0 40rpx;
}

.container{
  position:fixed;
  width:100%;
  margin-top: 0%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.6);
  overflow: hidden;
  z-index: 9999;
}

.hide{
  display: none;
}

.expandArrow{
  width:50rpx;
  height:30rpx;
  margin: 0rpx 0rpx 0rpx 46%;
}

.detail-info{
  color: #006fbe;
  text-align: right;
}

.information{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
}

/*******load More********/
.loading{
  padding: 10rpx;
  text-align: center;
}

.loading:before{
  display: inline-block;
  margin-right: 5rpx;
  vertical-align: middle;
  content: '';
  width: 40rpx;
  height: 40rpx;
  /* background: url(../../images/icon-loading.png) no-repeat; */
  background-size: contain;
  animation: rotate 1s linear infinite;
}

.loading.complete:before{
  display: none;
}